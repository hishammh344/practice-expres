{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["esnext", "DOM"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "build",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
